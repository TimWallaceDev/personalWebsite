  min-width: 300px;
  max-width: 450px;
  height: fit-content;
  min-height: 5px;
  background-color: orange;
  border: 5px solid orange;
  border-radius: 10px;
  flex-wrap: wrap;
  margin-bottom: 5px;
}

.subtitle {
  display: block;
  text-align: center;
  width: 100%;
}

